<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- LINEAR IZQUIERDA, SOLO TIENE UN LADO-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:id="@+id/TVHora"
                android:textColor="#673AB7"
                android:textStyle="bold"
                android:gravity="bottom|right"
                android:textSize="@dimen/tamanioTextoRV">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A.M."
                android:id="@+id/TVAMPM"
                android:textColor="#FF5722"
                android:textStyle="bold"
                android:gravity="bottom|right"
                android:textSize="@dimen/tamanioAMPM">
            </TextView>

        </LinearLayout>
        <!--        TERMINA EL PRIMERO-->

        <!--        EMPIEZA EL SEGUNDO LINEAR-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I CONGRESO INTERNACIONAL"
                android:id="@+id/TVConferencia"
                android:textColor="#FF5722"
                android:textStyle="bold"
                android:gravity="bottom|left"
                android:textSize="13sp"
                android:ellipsize="end"
                android:lines="1">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nombreExpositora1"
                android:id="@+id/TVExpositora"
                android:textColor="#FF9800"
                android:textStyle="bold"
                android:gravity="bottom|left"
                android:textSize="13sp"
                android:ellipsize="end"
                android:lines="1">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inteligencia Artificial"
                android:id="@+id/TVTopico"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="bottom|left"
                android:textSize="13sp">
            </TextView>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
